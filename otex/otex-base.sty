% ==============================================================================
% 基础宏包 (Basic Packages)
% ==============================================================================

% 跨平台 shell escape 检测 (Portable shell escape detection)
\RequirePackage { pdftexcmds } 

% 颜色支持 (Color support)
\RequirePackage [table] { xcolor } 

% 列表定制 (Lists) - symbol detection
% \newlist is representative of enumitem
\cs_if_exist:NTF \newlist 
  { \msg_warning:nnnn { otex } { pkg-skip } { enumitem } { \\newlist~already~defined } }
  { \RequirePackage [inline] { enumitem } }

% 单位支持 (SI Units) - symbol detection
\cs_if_exist:NTF \SI 
  { \msg_warning:nnnn { otex } { pkg-skip } { siunitx } { \\SI~already~defined } }
  { \RequirePackage { siunitx } }

% 微排版优化 (Micro-typography)
\RequirePackage { microtype }

% 首行缩进 (Intent first paragraph after section header)
\RequirePackage { indentfirst }

