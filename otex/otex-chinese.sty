  {
    \bool_if:NTF \g_otex_english_bool
      {
        % English Mode: Load CTeX mostly for font support if needed, but plain scheme
        \otex_smart_require:nnnn { ctex }
          { UTF8, scheme=plain, heading=true }
          { }
          { }
      }
      {
        % Chinese Mode: Load CTeX with chinese scheme
        \otex_smart_require:nnnn { ctex }
          { UTF8, heading=true, scheme=chinese }
          { } 
          { }
      }
  }

